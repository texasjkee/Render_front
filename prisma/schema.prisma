generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id       Int      @id @default(autoincrement())
  name     String
  isDone   Boolean
  isPaid   Boolean
  price    Int
  date     DateTime
  authorId Int
  author   User     @relation(fields: [authorId], references: [id])

  @@map("events")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique(map: "User_email_key")
  name     String?
  password String?
  events   Event[]
  tokens   Token[]
  roles    Role[]

  @@map("users")
}

model Token {
  token     String   @unique
  exp       DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  userAgent String   @map("user_agent")

  @@map("tokens")
}

enum Role {
  ADMIN
  USER
}
